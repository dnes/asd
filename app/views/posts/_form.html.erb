<%= form_for(@post) do |f| %>

  <% if @post.errors.any? %>
    <%= pluralize(@post.errors.count, 'error')+':' %><br>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end%>

  <div class = "field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :author %> <br />
    <%= f.text_field :author %> 
  </div>
  
  <div class="field">
    <%= f.label :category %> <br />
    <%= f.text_field :category %>
  </div>

  <div class = "field">
    <%= f.label :content %><br />
    <%= f.text_area :content %> <br />
  </div>

  <div class = "actions">
    <%= f.submit %>
  </div>

<% end %>  

